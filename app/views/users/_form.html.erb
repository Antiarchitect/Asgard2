<% form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label 'Логин:' %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label 'Пароль:' %><br />
    <%= f.password_field :password %>
  </p>
   <p>
    <%= f.label 'Подтверждение пароля:' %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Регистрация" %></p>
<% end %>
